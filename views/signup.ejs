<!DOCTYPE html>
<html lang="en">
<% include ./partials/header %>

    <body>
        <div class="container">
            <div>
                <h3 align="center">Welcome to CS-Connect !!!</h3>
                <ul class="nav nav-tabs justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" href="./signin">Log In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="./signup">Create Account</a>
                    </li>
                    </ul>
            </div>
            <br>
            <% if(verificationerror){ %>
                <p class ="alert alert-danger">
                    <%= verificationerror %>
                </p>
            <% } %>
            <% if(error){ %>
                <p class ="alert alert-danger">
                    Error occured while sending verification code. Please try again.
                </p>
            <% }else{ %>
                <div class="col-sm-6 offset-sm-2">
                        <p>Your verification code expires in an hour.</p>
                </div>
            
                <form class="border-dark" action="/signup" method="GET" name="signupform" >
                    <div class="form-group row">
                        <label for="colFormLabelLg" class="col-sm-2 offset-sm-2 col-form-label col-form-label-lg">Email</label>
                        <div class="col-sm-6">
                            <input type="email" class="form-control form-control-lg" name="email" value="<%= theirEmail %>" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                            <label for="colFormLabelLg" class="col-sm-2 offset-sm-2 col-form-label col-form-label-lg">Verification code</label>
                            <div class="col-sm-6">
                                <input type="number" class="form-control form-control-lg" name="verificationcode" required>
                            </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-sm-6 offset-sm-2">
                            <button type="submit" class="btn btn-primary btn-lg">Verify</button>
                        </div>
                    </div>
                </form>
            <% } %>
        </div>
        
        <% include ./partials/footer %>
        <% include ./partials/scripts %>
    </body>
</html>